Time O(n) Space O(h)
public int kthSmallest(TreeNode root, int k) {
        int result = 0;
        LinkedList<TreeNode> stack = new LinkedList<TreeNode>();
        TreeNode curNode = root;
        while(!stack.isEmpty() || curNode != null) {
            if (curNode != null) {
                stack.push(curNode);
                curNode = curNode.left;
            } else {
                curNode = stack.pop();
                if (--k == 0) {
                    result = curNode.val;
                    break;
                }
                curNode = curNode.right;
            }
        }
        return result;
}
